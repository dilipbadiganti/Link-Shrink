<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
  <title>Document</title>
  <style>

    h1.heading {
    text-align: center;
    color: azure;
    margin-top: 2rem;
    }

 
    body {
        background-image: url('https://images.unsplash.com/photo-1685287417745-0ed40cb5b3c1?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=870&q=80');
        background-size: cover;
        background-repeat: no-repeat;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="heading">Link Shrink</h1>
    <form action="/shortUrls" method="POST" class="my-4 form-inline">
     
      <input required placeholder="Enter your URL to shrink" type="url" name="fullUrl" id="fullUrl" class="form-control col mr-2">

      <br>
      <br>

      <button class="btn btn-success mx-auto d-block" type="submit">Shrink</button>


    </form>
    
    <table class="table table-striped table-responsive">
      <thead>
        <tr>
          <th style="color: white; font-size: 25px;">Full URL</th>
          <th style="color: white; font-size: 25px;">Short URL</th>
        </tr>
      </thead>
      <tbody>
        <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td><a href="<%= shortUrl.original %>" style="color: rgb(222, 160, 89); font-size: 25px;"><%= shortUrl.original %></a></td>
            <td><a href="<%= shortUrl.shortUrl %>" style="color: rgb(255, 149, 1); font-size: 25px;"><%= shortUrl.shortUrl %></a></td>
            <!-- <td><%= shortUrl.clicks %></td> -->
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>




